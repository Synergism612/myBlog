<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.synergism.blog.core.favorite.mapper.FavoriteMapper">
    <insert id="insertFavorite">
        INSERT INTO user_favorite(user_id, favorite_id)
        values (#{userID}, #{favoriteID})
    </insert>

    <select id="selectAllFavoriteInformationList"
            resultType="com.synergism.blog.core.favorite.entity.FavoriteInformation">
        select f.id,
               f.name,
               f.annotation,
               f.if_private,
               u.nickname,
               u.username
        from user_favorite uf
                 join
             (
                 favorite f ,
                     `user` u
                 )
             on
                     uf.favorite_id = f.id and
                     uf.user_id = u.id
    </select>
</mapper>
